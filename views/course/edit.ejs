<!doctype html>
<html lang="pt-br">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/f8b439a839.js" crossorigin="anonymous"></script>

    <title><%= title %></title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- jQuery Mask Plugin -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <style>
        .my-border {
            border: 1px solid rgba(0,0,0,0.2);
            border-radius: 10px;
            padding: 2%
        }
    </style>
  </head>
  <body>
    </script>
    <div class="container">
        <div class="row">
            <div class="col-md-12 my-border" style="margin-top: 1%">
                <h2 class="light" style="text-align: center">Cadastrar Aula</h2>
                <% course.forEach(function(course) { %>
                    <form action="/course/update" method="POST">
                        <div class="col-md-12 my-border">
                            <h4 class="light">Informações da Aula</h4>

                            <input type="hidden" name="id" value="<%= course._id %>">

                            <div class="form-row">
                                <div class="col-4">
                                    <label for="materia">Matéria:</label>
                                    <input type="text" name="materia" class="form-control form-control-sm materia" required="" value="<%= course.materia %>">
                                </div>
                                <div class="col-3">
                                    <label for="meeting">Encontro:</label>
                                    <input type="text" name="meeting" class="form-control form-control-sm meeting" required="" value="<%= course.meeting %>">
                                </div>
                                <div class="col-3">
                                    <label for="time">Horário:</label>
                                    <input type="text" name="time" class="form-control form-control-sm time" required="" value="<%= course.time %>">
                                </div>
                            </div>

                            <div class="form-row" style="margin-top: 1%">
                                <div class="col-3">
                                    <label for="professor">Professor(a):</label>
                                    <input type="text" name="professor" class="form-control form-control-sm professor" required="" value="<%= course.professor %>">
                                </div>
                                <div class="col-3">
                                    <label for="group">Turma:</label>
                                    <input type="text" name="group" class="form-control form-control-sm group" required="" value="<%= course.group %>">
                                </div>
                                <div class="col-3">
                                    <label for="qtd_students">QTD Alunos:</label>
                                    <input type="text" name="qtd_students" class="form-control form-control-sm qtd_students" required="" value="<%= course.qtd_students %>">
                                </div>
                            </div>
                        </div>

                        <div class="form-row" style="margin-top: 1%">
                            <div class="col-md-12">
                                <a href="/course" class="btn btn-sm btn-dark"><i class="far fa-arrow-alt-circle-left"></i> Voltar</a>
                                <button type="submit" class="btn btn-sm btn-primary">Atualizar <i class="fas fa-greater-than"></i></button>
                            </div>
                        </div>
                    </form>
                <% }) %>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.0.min.js"></script> 
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
  </body>
</html>