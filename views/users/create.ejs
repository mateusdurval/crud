<!doctype html>
<html lang="pt-br">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/f8b439a839.js" crossorigin="anonymous"></script>

    <title><%= title %></title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- jQuery Mask Plugin -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <script>
        $(document).ready(function ($) {
            $('.phone').mask('(00) 00000-0000');
        })
        $(document).ready(function ($) {
            $('.cpf').mask('000.000.000-00');
        })
        $(document).ready(function ($) {
            $('.rg').mask('00.000.000-00');
        })
        $(document).ready(function ($) {
            $('.cep').mask('00.000-000');
        })
    </script>
    
    <style>
        .my-border {
            border: 1px solid rgba(0,0,0,0.2);
            border-radius: 10px;
            padding: 2%
        }
    </style>
  </head>
  <body>
    </script>
    <div class="container">
        <div class="row">
            <div class="col-md-12 my-border" style="margin-top: 1%">
                <h2 class="light" style="text-align: center">CADASTRO DE USUÁRIO</h2>

                <form action="/users/insert" method="POST">
                    <div class="col-md-12 my-border">
                    <h4 class="light">Dados do usuário</h4>
                        <div class="form-row">
                            <div class="col-4">
                                <label for="name">Nome:</label>
                                <input type="text" name="name" class="form-control form-control-sm" placeholder="Ex.: Mateus Durval Ferreira" required="">
                            </div>
                            <div class="col-3">
                                <label for="age">Nascimento:</label>
                                <input type="date" name="age" class="form-control form-control-sm" placeholder="Nascimento" required="">
                            </div>
                            <div class="col-3">
                                <label for="phone">Telefone celular</label>
                                <input type="text" name="phone" class="form-control form-control-sm phone" placeholder="Ex.: (99) 99999-9999" required="">
                            </div>
                        </div>

                        <div class="form-row" style="margin-top: 1%">
                            <div class="col-3">
                                <label for="cpf">CPF:</label>
                                <input type="text" name="cpf" class="form-control form-control-sm cpf" placeholder="Ex.: 000.000.000-00" required="">
                            </div>
                            <div class="col-3">
                                <label for="rg">RG:</label>
                                <input type="text" name="rg" class="form-control form-control-sm rg" placeholder="Ex.: 00.000.000-00" required="">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 my-border" style="margin-top: 1%">
                        <h4>Endereço</h4>

                        <div class="form-row">
                            <div class="col-2">
                                <label for="cep">CEP:</label>
                                <input type="text" name="cep" id="cep" class="form-control form-control-sm" placeholder="41.515-324" required="">
                            </div>
                            <div class="col-2">
                                <label for="city">Cidade:</label>
                                <input type="text" name="city" id="city" class="form-control form-control-sm" placeholder="Salvador" required="">
                            </div>
                            <div class="col-1">
                                <label for="state">Estado:</label>
                                <input type="text" name="state" id="state" class="form-control form-control-sm" placeholder="BA" required="">
                            </div>
                            <div class="col-2">
                                <label for="country">Bairro:</label>
                                <input type="text" name="district" id="district" class="form-control form-control-sm" placeholder="Pituba" required="">
                            </div>
                            <div class="col-3">
                                <label for="country">Rua:</label>
                                <input type="text" name="street" id="street" class="form-control form-control-sm" placeholder="Rua XXX, Quadra 06" required="">
                            </div>
                            <div class="col-1">
                                <label for="country">Número:</label>
                                <input type="text" name="number" id="number" class="form-control form-control-sm" placeholder="75" required="">
                            </div>
                        </div>
                    </div>

                    <div class="form-row" style="margin-top: 1%">
                        <div class="col-md-12">
                            <a href="/" class="btn btn-sm btn-dark"><i class="far fa-arrow-alt-circle-left"></i> Voltar</a>
                            <button type="submit" class="btn btn-sm btn-success">Cadastrar <i class="fas fa-greater-than"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.0.min.js"></script> 
    <script>
        $(document).ready(function() {
            $("#cep").on('change', function() {
                let cep = $(this).val()
                $.ajax({
                    method: 'GET',
                    url: 'https://viacep.com.br/ws/'+cep+'/json/'
                }).done(function(data) {
                    console.log(data)
                    $("#city").val(data.localidade)
                    $("#state").val(data.uf)
                    $("#district").val(data.bairro)
                    $("#street").val(data.logradouro)
                    $("#number").focus()
                })
            })
        })
    </script>

    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
  </body>
</html>