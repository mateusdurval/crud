<!doctype html>
<html lang="pt-br">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/f8b439a839.js" crossorigin="anonymous"></script>

    <title><%= title %></title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- jQuery Mask Plugin -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.10/jquery.mask.js"></script>
    <style>
        .my-border {
            border: 1px solid rgba(0,0,0,0.2);
            border-radius: 10px;
            padding: 2%
        }
    </style>
  </head>
  <body>
    </script>
    <div class="container">
        <div class="row">
            <div class="col-md-12 my-border" style="margin-top: 1%">
                <h2 class="light" style="text-align: center">Cadastrar Produto</h2>

                <form action="/products/insert" method="POST">
                    <div class="col-md-12 my-border">
                        <h4 class="light">Dados do Produto</h4>
                        <div class="form-row">
                            <div class="col-4">
                                <label for="name">Nome:</label>
                                <input type="text" name="name" class="form-control form-control-sm name" placeholder="Ex.: SmarTV 32'" required="">
                            </div>
                            <div class="col-3">
                                <label for="model">Modelo:</label>
                                <input type="text" name="model" class="form-control form-control-sm model" placeholder="Ex.: STVL32" required="">
                            </div>
                            <div class="col-3">
                                <label for="brand">Marca:</label>
                                <input type="text" name="brand" class="form-control form-control-sm brand" placeholder="Ex.: Samsung" required="">
                            </div>
                        </div>

                        <div class="form-row" style="margin-top: 1%">
                            <div class="col-3">
                                <label for="ean">EAN:</label>
                                <input type="number" name="ean" class="form-control form-control-sm ean" placeholder="Ex.: 7324516544" required="">
                            </div>
                            <div class="col-3">
                                <label for="made">Made:</label>
                                <input type="text" name="made" class="form-control form-control-sm made" placeholder="Ex.: China" required="">
                            </div>
                            <div class="col-3">
                                <label for="serial_number"></i> Nº de Série:</label>
                                <input type="number" name="serial_number" class="form-control form-control-sm serial_number" placeholder="Ex.: 4050" required="">
                            </div>
                        </div>
                    </div>

                    <div class="form-row" style="margin-top: 1%">
                        <div class="col-md-12">
                            <a href="/products" class="btn btn-sm btn-dark"><i class="far fa-arrow-alt-circle-left"></i> Voltar</a>
                            <button type="submit" class="btn btn-sm btn-primary">Cadastrar <i class="fas fa-greater-than"></i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.0.min.js"></script> 
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
  </body>
</html>