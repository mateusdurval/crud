<!doctype html>
<html lang="pt-br">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/f8b439a839.js" crossorigin="anonymous"></script>

    <title><%= title %></title>

    <style>
      a {
        text-decoration: none;
      }

      .btn-delete {
        color: rgba(0,0,0,0.7)
      }
    </style>
  </head>
  <body>

    <div class="container">
      <ul class="nav nav-tabs justify-content-center">
        <li class="nav-item">
          <a class="nav-link " href="/">Cadastro de Usuários</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/products">Cadastro de Produtos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/course">Cadastro de Aulas</a>
        </li>
      </ul>
    </div>

    <div class="container"> 
      <div class="row">
        <div class="col-md-12" style="margin-top: 2%">
          <h3 style="text-align: center">Produtos cadastrados - <span class="total"></span></h3>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-12" style="margin-top: 2%">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nome:</th>
                <th>Modelo:</th>
                <th>Marca:</th>
                <th>EAN:</th>
                <th>Made:</th>
                <th>Nº de Série</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
                <% data.forEach(function(product) {%>
                    <tr>
                        <td><a href="javascript:void(0)" class="btn btn-sm btn-dark btn-description" data-name="<%= product.name %>" data-model="<%= product.model %>" data-brand="<%= product.brand %>"><i class="fas fa-box-open"></i> <%= product.name %></a></td>
                        <td><%= product.model %></td>
                        <td><%= product.brand %></td>
                        <td><%= product.ean %></td>
                        <td><%= product.made %></td>
                        <td><%= product.serial_number %></td>
                        <td><a href="/products/edit/<%= product._id %>"><i class="far fa-edit" style="color: darkcyan"></i></a></td>
                        <td><a href="javascript:void(0)" class="btn-delete" data-name="<%= product.name %>" data-model="<%= product.model %>" data-id="<%= product._id %>"><i class="far fa-trash-alt"></i></a></td>
                    </tr>
                <% }) %>
            </tbody>
          </table>          
        </div>
      </div>

      <div class="row">
        <div class="col-md-12" style="text-align: center;">
          <a href="/products/create" class="btn btn-sm btn-success">Cadastrar <i class="fas fa-box-open"></i></a>
        </div>
      </div>
    </div>

    <!-- Modal Description -->
    <div class="modal fade modalDescription" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                 <h3 class="modal-title" id="exampleModalLabel">Dados do Produto</h3>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <h5 class="name-profile"></h5> 
                <strong>Modelo: </strong><span class="model"></span><br>
                <strong>Marca: </strong><span class="brand"></span><br>
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-dark" data-dismiss="modal">Fechar</button>
              </div>
          </div>
      </div>
    </div>
    
    <!-- Modal Delete-->
    <div class="modal fade" id="modalDelete" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header">
                 <h5 class="modal-title" id="exampleModalLabel">Ops! Tem certeza?</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                Você realmente deseja excluir o produto <strong><span class="product_name"></span> | <span class="product_model"></span></strong> ?
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-dark" data-dismiss="modal">Cancelar</button>
                  <button type="button" class="btn btn-danger btnConfirmDeletion">Excluir</button>
              </div>
          </div>
      </div>
    </div>

    <!-- Toast Aviso -->
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-delay="5000" style="position: absolute; top: 0; right: 0; margin-top: 1%; margin-right: 1%">
        <div class="toast-header">
          <strong class="mr-auto">Aviso!</strong>
          <small class="text-muted">Agora</small>
          <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="toast-body" style="background-color: #f1f1f1;">
          <p class="text-toast"></p>
        </div>
      </div>

    <script src="https://code.jquery.com/jquery-3.5.0.min.js"></script> 

    <script>
        function getTotalProducts() {
            $.ajax({
                method: 'GET',
                url: '/products/total'
            }).done(function(data) {
                $(".total").text(data)
            });
        }

        $(document).ready(function() {
            getTotalProducts()
            let buttonRemove = null;
            let id = null;
            $(document).on('click', '.btn-delete', function() {
                buttonRemove = $(this)
                id = $(this).data('id')
                $("#modalDelete").modal('toggle')
                $(".product_name").text($(this).data('name'))
                $(".product_model").text($(this).data('model'))
            })

            $(document).on('click', '.btnConfirmDeletion', function() {
                $.ajax({
                    method: 'GET',
                    url: '/products/destroy/'+id
                }).done(function(data) {
                    if(data == 'success') {
                        if(buttonRemove != null) {
                            buttonRemove.closest('tr').remove()
                            $("#modalDelete").modal('toggle')
                            $(".toast").toast('show');
                            $(".text-toast").text('Produto removido com sucesso!')
                            getTotalProducts();
                        }
                    }
                })
            })
        })
    </script>

    <script>
      $(document).ready(function() {
        $(document).on('click', '.btn-description', function() {
          $(".modalDescription").modal('toggle')
          $(".model").text($(this).data('model'))
          $(".brand").text($(this).data('brand'))
        })
      })
    </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
  </body>
</html>
